<script src="<%= site.adminURL%>/assets/jquery.preview-img.js"></script>
<script type="text/javascript">
    $("#thumbnail").previewImageFrom("#img-input");


function add() {

    let formData = {
        name : $("input[name=brand_name]").val(),
    }
       
    $("#add-btn").attr("disabled", true);

    $.ajax({
        url : "<%= site.adminURL%>/json/brands/create",
        type:"POST",
        data : formData,      
        success : (res)=>{
            console.log(res);

            if(res.status == false) {
                 $.toast({
                    text: `<h6>${res.message}</h6>`,
                    showHideTransition: 'fade',
                    icon: 'error',
                    position: "top-right",
                    loader:false
                });

                 setTimeout(()=>{ 
                     $("#add-btn").attr("disabled", false);
                    }, 1500);
            }



            if(res.status == true) {
                $.toast({
                    text: `<h6>${res.message}</h6>`,
                    showHideTransition: 'slide',
                    loader:false,
                    icon: 'success',
                    position: "top-right"
                });


                    setTimeout(()=>{ 

                     console.log("successful");
                     window.location.href = "<%= site.adminURL%>/brands";

                    }, 2000);

            } 
        }
    });  

}
   
</script>

