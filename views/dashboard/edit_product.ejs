    var formData = new FormData(document.getElementById("multi-form"));
    var inputs = document.querySelectorAll('#multiImg');

    console.log(inputs);

    formData.append('pKey', '<%=product.pKey%>');
    formData.append('productName', '<%=product.name%>');



    console.log(formData);



