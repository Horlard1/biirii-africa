                                             <option value="<%=category.id %>" <% if (category.id == product.category_id) { -%>
                                                 selected
                                             <% }%>><%=  helpers.ucwords(category.name) %></option>
                                             <%})%>
                                        </select>                                        
                                    </div>



                                    <!--Description-->
